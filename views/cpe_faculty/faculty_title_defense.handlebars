<head>
  <title>CpERMS | Title Defense</title>
  <!-- LOCAL -->
  <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>

{{> header_faculty }}

<!--title-->
<div class="d-flex justify-content-center">
  <div class= "well well-width">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-12 col-sm-12 small">
          <h4>Title Defense</h4>
          <hr class="botm-line">
            <form method="post" action="/students/settings">
              <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr class="info center">
                  <th style="width: 5%">Number</th>
                  <th style="width: 5%">Day</th>
                  <th style="width: 10%">Room</th>
                  <th style="width: 60%">Title</th>
                  <th style="width: 20%">Action</th>
                </tr>
              </thead>
              <tbody>
                {{#each titleDefense}}
                <tr class="center">
                  <td></td>
                  <td></td>
                  <td></td>
                  <td class="defense_id" hidden>{{this.id}}</td>
                  <td class="thesis_id" hidden>{{this.thesis_id}}</td>
                  <td class="abstract" hidden>{{this.abstract}}</td>
                  <td class="title">{{this.thesis_title}}</td>  
                  <td>
                    <button type="button" class="revieww btn btn-success btn-sm" data-toggle="modal" data-target="#panel"> Panel</button>
                    <button type="button" class="revieww btn btn-warning btn-sm" data-toggle="modal" data-target="#lead_panel"> Lead Panel</button>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</div><!--title-->

<!--MODAL-FORM panel-->
<div class="modal fade small" id="panel" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="title2"class="modal-title"><strong> </strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!--abtract-->
        <h4 class="modal-title">Abstract</h4><br>
        <p class = "abstract2" class="justify" style="margin: 0 2%"></p>
        <hr><!--abtract-->
        <!--comments-->
        <form method="post" action="/faculty/title_defense/panel">
          <input class= "thesis_id2" value="" name="thesis_id" hidden>
          <input class = "defense_id2" value="" name="defense_id" hidden>
          <div class="form-group">
            <div class="form-group">
              <textarea type="text" style="height: 150px" name="textarea_field" placeholder="Recommendations here.." class="form-control"></textarea>
            </div>
            <div class="pull-right footer">
              <button type="submit" class="btn btn-success btn-sm"  id="loading" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Please wait...">Done</button>
              <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
            </div>
          </div>
        </form><!--comments-->
      </div>
    </div>
  </div>
</div>

<!--MODAL-FORM head_panel-->
<div class="modal fade small" id="lead_panel" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="title2" class="modal-title"><strong> Title</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!--abtract-->
        <h4 class="modal-title">Abstract</h4><br>
        <p class="abstract2 justify" style="margin: 0 2%"></p>
        <hr><!--abtract-->
        <!--comments and status-->
        <form method="post" action="/faculty/title_defense/headpanel">
          <input class = "thesis_id2" value="" name="thesis_id" hidden >
          <input class = "defense_id2" value="" name="defense_id" hidden>
          <div class="form-group">
            <div class="form-group">
              <textarea type="text" style="height: 150px" name="textarea_field" placeholder="Your comments and suggestions here" class="form-control"></textarea>
            </div>
            <div class="form-group">
             <select style="height: 2.5em" class="form-control gray" name="grade" class="form-control" id="user_class" required>
                <option hidden>Result</option>
                <option value ="7">Passed</option>
                <option value ="11">Passed with Revisions</option>
                <option value ="8">Failed</option>
             </select>
            </div>
            <div class="pull-right footer">
              <button type="submit" class="btn btn-success btn-sm" id="loading" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Please wait...">Done</button>
              <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
            </div>
          </div>
        </form><!--comments and status-->
      </div>
    </div>
  </div>
</div>

<script>
$('.revieww').click(function() {
   var abstract =  $(this).closest('tr').find('.abstract').text();
   $('.abstract2').html(abstract);
   var title =  $(this).closest('tr').find('.title').text();
   $('.title2').html(title);
   var thesisid =  $(this).closest('tr').find('.thesis_id').text();
   $('.thesis_id2').val(thesisid);
  var defenseid =  $(this).closest('tr').find('.defense_id').text();
   $('.defense_id2').val(defenseid);
});
</script>

{{> footer}}
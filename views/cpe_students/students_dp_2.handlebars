<head>
  <title>CpERMS | DP II</title>
  <!-- LOCAL -->
  <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>

{{> header_students }}

<!--thesis-->
<div class="container" style="text-align: center">
  <h4>Schedule: Day, Room</h4>
  <br>
</div>
<div class="d-flex justify-content-center">
  <div class= "well well-width">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-12 col-sm-12 small">
          <h4>Design Project II</h4>
          <hr class="botm-line">
          <div class="form-group">
            Title:
            <div class="form-group">
              <input type="text" name="username" placeholder="Your title here" class="form-control" value="Title from Database" disabled>
            </div>
            Abstract:
            <div class="form-group">
              <textarea type="text" style="height: 250px" name="textarea_field" placeholder="Your abstract here" class="form-control" disabled>Abstract from Database</textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><!--thesis-->
<!--committee-->
<div class="d-flex justify-content-center">
  <div class= "well well-width">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-12 col-sm-12 small">
          <h4>Panel</h4>
          <hr class="botm-line">
          <div class="form-group">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr class="info center">
                  <th style="width: 10%">Number</th>
                  <th>Panel</th>
                  <th style="width: 25%">Action</th>
                </tr>
              </thead>
              <tbody>
                <tr class="center">
                  <td></td>
                  <td></td>
                  <td>
                    <button type="button" class="btn btn-default btn-sm border_orange" data-toggle="modal" data-target="#view_comments"><i class="fa fa-eye"></i> Comments/Suggestions</button>
                    <button type="button" class="btn btn-default btn-sm border_orange" data-toggle="modal" data-target="#view_grades"><i class="fa fa-eye"></i> Grades</button>
                  </td>
                </tr>
              </tbody>
            </table>
            <h5 class="text-right">Result: <strong></strong></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div><!--committee-->

<!--MODAL-FORM view_comments-->
<div class="modal fade small" id="view_comments" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><strong>Comments/Suggestions</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="justify" style="margin: 0 2%"></p>
        <hr>
        <div class="pull-right footer">
          <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<!--MODAL-FORM view_grades-->
<div class="modal fade small" id="view_grades" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><strong>Panel 1</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr class="info center">
              <th style="width: 10%">Number</th>
              <th>Student</th>
              <th style="width: 20%">Grade</th>
            </tr>
          </thead>
          <tbody>
            <tr class="center">
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </tbody>
        </table>
        <div class="pull-right footer">
          <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

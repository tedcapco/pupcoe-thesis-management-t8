  <div class="d-flex justify-content-center small">
    <div class="container">
      <div class="d-flex well">
        <div class="col-md-12 col-sm-12">
          <h4>Class Management</h4>
          <hr class="botm-line">
          <form method="post" action="">
            <table class="table table-striped table-bordered table-hover">

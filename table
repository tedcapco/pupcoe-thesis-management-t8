CREATE TABLE users (
  id SERIAL PRIMARY KEY,
  first_name varchar(50),
  middle_name varchar(50),
  last_name varchar(50),
  email varchar(50) UNIQUE,
  password varchar(255),
  user_type varchar(50),
  contact_no varchar(50),
  group_id integer,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE class (
  id SERIAL PRIMARY KEY,
  section varchar(50)
  adviser_id integer,
  acad_year varchar(50)
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE class_members (
  id SERIAL PRIMARY KEY,
  class_id integer,
  user_id  integer,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE group (
  id SERIAL PRIMARY KEY,
  group_name varchar(50),
  class_id  integer,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE group_members (
  id SERIAL PRIMARY KEY,
  group_id integer,
  user_id  integer,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE thesis (
  id SERIAL PRIMARY KEY,
  thesis_title varchar(200) UNIQUE,
  group_id  integer,
  current_stage varchar,
  abstract varchar(2000),
  acad_year varchar(50),
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);
  
CREATE TABLE thesis_status (
  id SERIAL PRIMARY KEY,
  status varchar (50),
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE committee (
  id SERIAL PRIMARY KEY,
  committee_name varchar(50),
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE committee_members (
  id SERIAL PRIMARY KEY,
  faculty_id integer
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE approval_table (
  id SERIAL PRIMARY KEY,
  thesis_id int,
  vote int,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE defense (
  id SERIAL PRIMARY KEY,
  defense_type varchar(20),
  thesis_id int,
  grades_id int,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

CREATE TABLE proposal_comments (
  id SERIAL PRIMARY KEY,
  thesis_id integer,
  author_id int,
  content varchar(2000),
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

  CREATE TABLE panel_members(
  id SERIAL PRIMARY KEY,
  panel_id integer ,
  faculty_id int,
  head_panel_id int,
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);

  CREATE TABLE defense_grade(
  id SERIAL PRIMARY KEY,
  grades varchar (20),
  updated_by integer,
  created_by integer,
  date_created  TIMESTAMP DEFAULT NOW()
);
select  thesis.id,thesis.thesis_title,thesis.abstract,thesis.group_id,vote,thesis_status.status,users.first_name,users.last_name from approval_table
inner join thesis on thesis.id = thesis_id
inner join thesis_status on thesis_status.id = vote
inner join users on users.id = approval_table.created_by
where thesis.group_id = 1 order by thesis_title
select thesis.id,thesis_title,group_id,current_stage,abstract,current_stage,groups.class_id, class.adviser_id from thesis
inner join groups on groups.id = group_id
inner join class on class.id = groups.class_id
where current_stage = 2 and thesis.id not in (select thesis_id from approval_table where created_by = 1)

select count (thesis_id) from approval_table
where vote = 9

select * from class inner join users on users.id = adviser_id where acad_year = '${filter.batch}'

